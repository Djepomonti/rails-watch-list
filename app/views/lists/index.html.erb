<div class="banner">
  <div class="banner-container">
    <div class="row mt-5">
      <div class="col-7 col-sm-12 col-lg-7 mt-5">
        <div class="title">Créez vos listes de film par thème</div>
      </div>
    </div>
    <div class="row mt-5">
      <div class="col-12 col-sm-12 main-black">
         <%= link_to "Creez votre liste", new_list_path, class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>

<div class="main-container m-5">
  <h2 class="my-4 fw-bold text-center list-film">Ma liste de film</h2>
   <% if @lists == 0 %>
    <p class="text-blanc">Vous n'avez pas de liste pour le moment.</p>
  <% end %>
  <div class="cards mb-5">
      <% @lists.each do |list| %>
        <%= link_to list_path(list) do%>
          <div class="card-category"
            <% if list.photo.attached? %>
              style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
              url(<%= cl_image_path list.photo.key %>)">
              <%= list.name %>
            <% else %>
              <div class="bg"></div>
            <% end %>
          </div>
        <% end %>
      <% end %>
  </div>
</div>
